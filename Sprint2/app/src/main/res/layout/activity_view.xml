<?xml version="1.0" encoding="utf-8"?>
<com.sqlite.sqliteapp.Views.MenuFly
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5C5C5C"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="viewAccount"
            android:text="My Account"
            android:height="60sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openBook"
            android:text="Add Book"
            android:height="60sp"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="searchBooks"
            android:text="Search Books"
            android:height="60sp"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toggleMenu"
            android:text="Wish list"
            android:height="60sp"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="myBooks"
            android:text="My Books"
            android:height="60sp"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="logOut"
            android:text="Logout"
            android:height="60sp"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center|left"
            android:background="#256eb8"
            android:padding="5dp"
            android:id="@+id/topsection">

            <ImageButton
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton"
                android:src="@android:drawable/arrow_down_float"
                android:layout_weight="0"
                android:background="#256eb8"
                android:onClick="toggleMenu"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_weight="0.2"
                android:layout_marginLeft="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BOOKeGATOR"
                android:id="@+id/Title"
                android:layout_weight="0.06"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/middlesection"
            android:background="#DDDDDDDD">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Account Details"
                android:id="@+id/book"
                android:padding="5dp"
                android:textSize="22sp"
                android:textColor="#1a1a1a" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:fillViewport="true">

            <!-- <RatingBar
                   android:id="@+id/ratingBar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:numStars="5"
                   android:stepSize="0.5"
                   android:rating="0.0" />

               <TextView
                   android:id="@+id/lblResult"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Result:"
                   android:textAppearance="?android:attr/textAppearanceLarge" />

               <TextView
                   android:id="@+id/txtRatingValue"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textAppearance="?android:attr/textAppearanceSmall" />
           -->

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottomsection"
                android:background="#ffffe6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >
                    <com.parse.ParseImageView
                        android:id="@+id/icon"
                        android:layout_width="290sp"
                        android:layout_height="210sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"  android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:touchscreenBlocksFocus="true"
                    android:transitionGroup="false"
                    android:nestedScrollingEnabled="false"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name -"
                            android:textColor="#372c24"
                            tools:ignore="HardcodedText"
                            android:id="@+id/name" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/nameV"    android:singleLine="true"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email -"
                            android:textColor="#372c24"
                            tools:ignore="HardcodedText"
                            android:id="@+id/email" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/emailV"    android:singleLine="true"
                            android:layout_marginLeft="10dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number -"
                            android:textColor="#372c24"
                            tools:ignore="HardcodedText"
                            android:id="@+id/phone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/phoneV" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"  android:layout_gravity="center_horizontal"
                            android:stepSize="0.5"
                            android:rating="0.0" />

                    </LinearLayout>

                   <!-- <Button
                        android:id="@+id/btnSave"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dip"
                        android:text="Edit Details"
                        tools:ignore="HardcodedText" />-->

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.sqlite.sqliteapp.Views.MenuFly>